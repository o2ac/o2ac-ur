<?xml version="1.0"?>
<launch>
  
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find o2ac_scene_description)/urdf/base_scene.urdf.xacro'" />
  
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
  
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find o2ac_scene_description)/config/default-display.rviz" required="true" />
</launch>
